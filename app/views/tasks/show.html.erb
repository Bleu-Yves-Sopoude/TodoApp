<div class="task-details">
  <h2 class="task-title"><%= @task.name %></h2>

  <p class="task-description"><%= simple_format(@task.description) %></p>

  <p class="task-status-label">
    Status:
    <span class="status <%= @task.status || 'unknown' %>">
      <%= icon_for_status(@task.status || 'unknown') %>
      <%= (@task.status || 'Unknown').humanize rescue 'Unknown' %>
    </span>
  </p>

  <div class="task-actions">
    <%= link_to '✏️ Edit Task', edit_task_path(@task), class: 'btn edit-btn' %>
    <%= button_to '🗑️ Delete Task', task_path(@task), method: :delete,
        data: { confirm: 'Are you sure you want to delete this task?' },
        class: 'btn delete-btn' %>
    <%= link_to '⬅ Back to All Tasks', tasks_path, class: 'btn back-btn' %>
  </div>
</div>
