<h2 class="form-title">📝 Add New Task</h2>

<%= form_with model: @task, local: true, class: 'task-form' do |f| %>
  <div class="form-group">
    <%= f.label :name, "Task Name" %>
    <%= f.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Task Description" %>
    <%= f.text_area :description, rows: 4, class: 'form-textarea' %>
  </div>

  <div class="form-group">
    <%= f.label :status, "Status" %>
    <div class="status-options">
      <label><%= f.radio_button :status, 'completed' %> ✅ Completed</label>
      <label><%= f.radio_button :status, 'in_progress' %> 🚧 In Progress</label>
      <label><%= f.radio_button :status, 'pending' %> 🕒 Pending</label>
    </div>
  </div>

  <%= f.submit 'Create Task', class: 'submit-btn' %>
<% end %>
