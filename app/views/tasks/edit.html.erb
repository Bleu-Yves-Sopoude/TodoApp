<h2> Edit Task </h2>

<%= form_with model: @task do |f| %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :status %>
      <%= f.radio_button :status, 'completed' %> completed
      <%= f.radio_button :status, 'in_progress' %> in_progress
      <%= f.radio_button :status, 'pending' %> pending
    </p>
    <p>
     <%= f.submit %>
    </p>



<% end %>